<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>LapStore | E-Commerce Website</title>

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />

	<!-- Slick -->
	<link type="text/css" rel="stylesheet" href="~/lib/slick-carousel/slick.css" />
	<link type="text/css" rel="stylesheet" href="~/lib/slick-carousel/slick-theme.css" />

	<!-- nouislider -->
	<link type="text/css" rel="stylesheet" href="~/lib/nouislider/nouislider.min.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">

	<!-- Custom stylesheet -->
	<link type="text/css" rel="stylesheet" href="~/css/style.css" />

	<style>
		/* Updated top header styles */
		#top-header {
			background-color: #1e1f29;
			color: #fff;
			padding: 8px 0;
			font-size: 14px;
		}

		.top-header-content {
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

		.contact-info {
			display: flex;
			gap: 20px;
		}

		.contact-info a {
			color: #fff;
			text-decoration: none;
			display: flex;
			align-items: center;
			gap: 5px;
		}

		.contact-info i {
			color: #e31837;
			font-size: 14px;
		}

		.user-actions {
			display: flex;
			gap: 20px;
		}

		.user-actions a {
			color: #fff;
			text-decoration: none;
			display: flex;
			align-items: center;
			gap: 5px;
		}

		.user-actions i {
			color: #e31837;
			font-size: 14px;
		}

		#header {
			padding: 20px 0;
			background-color: #15161d;
		}

		.header-logo .logo {
			color: #fff;
			text-decoration: none;
			font-size: 30px;
			font-weight: 700;
		}

		.header-logo .logo span {
			color: #e31837;
		}

		.header-search {
			display: flex;
			margin: 0;
		}

		.header-search select.input-select {
			width: 130px;
			border: none;
			padding: 0 10px;
			border-radius: 4px 0 0 4px;
			background-color: #fff;
		}

		.header-search input.input {
			width: 100%;
			border: none;
			padding: 0 15px;
		}

		.header-search button.search-btn {
			width: 100px;
			border: none;
			background-color: #e31837;
			color: #fff;
			border-radius: 0 4px 4px 0;
			font-weight: 700;
		}

		.header-ctn {
			display: flex;
			align-items: center;
			justify-content: flex-end;
			gap: 30px;
		}

		.header-ctn > div {
			position: relative;
		}

		.header-ctn > div > a {
			display: flex;
			flex-direction: column;
			align-items: center;
			color: #fff;
			text-decoration: none;
			font-size: 14px;
		}

		.header-ctn > div > a > i {
			font-size: 20px;
			margin-bottom: 5px;
		}

		.header-ctn .qty {
			position: absolute;
			top: -8px;
			left: 15px;
			background-color: #e31837;
			color: #fff;
			width: 18px;
			height: 18px;
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 12px;
			font-weight: 500;
		}

		#navigation {
			background-color: #fff;
			border-bottom: 2px solid #e4e7ed;
			border-top: 3px solid #e31837;
		}

		.nav-link {
			color: #2B2D42;
			font-weight: 500;
			text-transform: uppercase;
			padding: 15px;
		}

		.nav-link:hover {
			color: #e31837;
		}

		.nav-link.active {
			color: #e31837;
		}

		/* Newsletter Styles */
		#newsletter {
			background-color: #fff;
			padding: 50px 0;
			text-align: center;
		}

		.newsletter-content h3 {
			font-size: 24px;
			margin-bottom: 20px;
		}

		.newsletter-form {
			display: flex;
			justify-content: center;
			margin-bottom: 20px;
			max-width: 550px;
			margin-left: auto;
			margin-right: auto;
		}

		.newsletter-form .input {
			width: 100%;
			padding: 12px 15px;
			border: 1px solid #e4e7ed;
			background-color: #FFF;
			border-radius: 4px 0px 0px 4px;
		}

		.newsletter-btn {
			padding: 12px 25px;
			border: none;
			background-color: #e31837;
			color: #FFF;
			font-weight: 700;
			border-radius: 0px 4px 4px 0px;
		}

		.newsletter-social {
			list-style: none;
			padding: 0;
			margin: 20px 0 0;
			display: flex;
			justify-content: center;
			gap: 15px;
		}

		.newsletter-social li a {
			display: block;
			width: 40px;
			height: 40px;
			line-height: 40px;
			text-align: center;
			border-radius: 50%;
			background-color: #15161D;
			color: #FFF;
			transition: 0.3s all;
		}

		.newsletter-social li a:hover {
			background-color: #e31837;
		}

		/* Footer Styles */
		#footer {
			background-color: #15161D;
			color: #B9BABC;
		}

		.footer-widget {
			margin-bottom: 30px;
		}

		.footer-title {
			color: #FFF;
			text-transform: uppercase;
			font-size: 18px;
			margin-bottom: 20px;
		}

		.footer-contact {
			list-style: none;
			padding: 0;
			margin: 15px 0;
		}

		.footer-contact li {
			margin-bottom: 10px;
		}

		.footer-contact li i {
			margin-right: 5px;
			color: #e31837;
		}

		.footer-links {
			list-style: none;
			padding: 0;
			margin: 0;
		}

		.footer-links li {
			margin-bottom: 10px;
		}

		.footer-links li a {
			color: #B9BABC;
			transition: 0.3s all;
		}

		.footer-links li a:hover {
			color: #e31837;
			text-decoration: none;
		}

		#bottom-footer {
			background-color: #1E1F29;
			padding: 20px 0;
		}

		.footer-payments {
			list-style: none;
			padding: 0;
			margin: 0 0 15px;
			display: flex;
			justify-content: center;
			gap: 10px;
		}

		.footer-payments li a {
			color: #a7a7a7;
			font-size: 24px;
			transition: 0.3s all;
		}

		.footer-payments li a:hover {
			color: #e31837;
		}

		.copyright {
			color: #B9BABC;
			font-size: 14px;
		}
	</style>

	@await RenderSectionAsync("Styles", required: false)
</head>
<body>
	<!-- TOP HEADER -->
	<div id="top-header">
		<div class="container">
			<div class="top-header-content">
				<div class="contact-info">
					<a href="tel:+021-95-51-84"><i class="fa fa-phone"></i>+021-95-51-84</a>
					<a href="mailto:email@email.com"><i class="fa fa-envelope"></i>email@email.com</a>
					<a href="#"><i class="fa fa-map-marker"></i>1734 Stonecoal Road</a>
				</div>
				<div class="user-actions">
					<a href="#"><i class="fa fa-dollar"></i>USD</a>
					<a href="#"><i class="fa fa-user-o"></i>My Account</a>
				</div>
			</div>
		</div>
	</div>
	<!-- /TOP HEADER -->

	<!-- MAIN HEADER -->
	<div id="header">
		<div class="container">
			<div class="row align-items-center">
				<!-- LOGO -->
				<div class="col-md-3">
					<div class="header-logo">
						<a href="/" class="logo">
							LapStore<span>.</span>
						</a>
					</div>
				</div>
				<!-- /LOGO -->

				<!-- SEARCH BAR -->
				<div class="col-md-6">
					<div class="header-search">
						<select class="input-select">
							<option value="0">All Categories</option>
							<option value="1">Laptops</option>
							<option value="2">Smartphones</option>
							<option value="3">Cameras</option>
							<option value="4">Accessories</option>
						</select>
						<input class="input" placeholder="Search here">
						<button class="search-btn">Search</button>
					</div>
				</div>
				<!-- /SEARCH BAR -->

				<!-- ACCOUNT -->
				<div class="col-md-3">
					<div class="header-ctn">
						<!-- Wishlist -->
						<div>
							<a href="#">
								<i class="fa fa-heart-o"></i>
								<span>Your Wishlist</span>
								<div class="qty">2</div>
							</a>
						</div>
						<!-- /Wishlist -->

						<!-- Cart -->
						<div>
							<a href="#">
								<i class="fa fa-shopping-cart"></i>
								<span>Your Cart</span>
								<div class="qty">3</div>
							</a>
						</div>
						<!-- /Cart -->
					</div>
				</div>
				<!-- /ACCOUNT -->
			</div>
		</div>
	</div>
	<!-- /MAIN HEADER -->

	<!-- NAVIGATION -->
	<nav id="navigation">
		<div class="container">
			<ul class="nav">
				<li class="nav-item">
					<a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Hot Deals</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-action="Index" asp-controller="Category">Categories</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-action="Index" asp-controller="Product">Laptops</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Smartphones</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Cameras</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Accessories</a>
				</li>
			</ul>
		</div>
	</nav>
	<!-- /NAVIGATION -->

	@RenderBody()

	<!-- NEWSLETTER -->
	<div id="newsletter" class="section">
		<div class="container">
			<div class="newsletter-content text-center">
				<div class="newsletter-icon mb-3">
					<img src="~/img/newsletter-icon.png" alt="Newsletter" style="width: 80px; opacity: 0.5;">
				</div>
				<h3 class="mb-2">Sign Up for the <strong>NEWSLETTER</strong></h3>
				<div class="newsletter-form">
					<form>
						<input class="input" type="email" placeholder="Enter Your Email">
						<button class="newsletter-btn"><i class="fa fa-envelope"></i> Subscribe</button>
					</form>
				</div>
				<ul class="newsletter-social">
					<li><a href="#"><i class="fa fa-facebook"></i></a></li>
					<li><a href="#"><i class="fa fa-twitter"></i></a></li>
					<li><a href="#"><i class="fa fa-instagram"></i></a></li>
					<li><a href="#"><i class="fa fa-pinterest"></i></a></li>
				</ul>
			</div>
		</div>
	</div>
	<!-- /NEWSLETTER -->

	<!-- FOOTER -->
	<footer id="footer">
		<div class="section">
			<div class="container">
				<div class="row">
					<div class="col-md-3">
						<div class="footer-widget">
							<h3 class="footer-title">ABOUT US</h3>
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut.</p>
							<ul class="footer-contact">
								<li><i class="fa fa-map-marker"></i> 1734 Stonecoal Road</li>
								<li><i class="fa fa-phone"></i> +021-95-51-84</li>
								<li><i class="fa fa-envelope"></i> email@email.com</li>
							</ul>
						</div>
					</div>

					<div class="col-md-3">
						<div class="footer-widget">
							<h3 class="footer-title">CATEGORIES</h3>
							<ul class="footer-links">
								<li><a href="#">Hot deals</a></li>
								<li><a href="#">Laptops</a></li>
								<li><a href="#">Smartphones</a></li>
								<li><a href="#">Cameras</a></li>
								<li><a href="#">Accessories</a></li>
							</ul>
						</div>
					</div>

					<div class="col-md-3">
						<div class="footer-widget">
							<h3 class="footer-title">INFORMATION</h3>
							<ul class="footer-links">
								<li><a href="#">About Us</a></li>
								<li><a href="#">Contact Us</a></li>
								<li><a href="#">Privacy Policy</a></li>
								<li><a href="#">Orders and Returns</a></li>
								<li><a href="#">Terms & Conditions</a></li>
							</ul>
						</div>
					</div>

					<div class="col-md-3">
						<div class="footer-widget">
							<h3 class="footer-title">SERVICE</h3>
							<ul class="footer-links">
								<li><a href="#">My Account</a></li>
								<li><a href="#">View Cart</a></li>
								<li><a href="#">Wishlist</a></li>
								<li><a href="#">Track My Order</a></li>
								<li><a href="#">Help</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div id="bottom-footer" class="section">
			<div class="container">
				<div class="row">
					<div class="col-md-12 text-center">
						<ul class="footer-payments">
							<li><a href="#"><i class="fa fa-cc-visa"></i></a></li>
							<li><a href="#"><i class="fa fa-credit-card"></i></a></li>
							<li><a href="#"><i class="fa fa-cc-paypal"></i></a></li>
							<li><a href="#"><i class="fa fa-cc-mastercard"></i></a></li>
							<li><a href="#"><i class="fa fa-cc-discover"></i></a></li>
							<li><a href="#"><i class="fa fa-cc-amex"></i></a></li>
						</ul>
						<span class="copyright">
							Copyright &copy;@DateTime.Now.Year All rights reserved
						</span>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<!-- /FOOTER -->

	<!-- jQuery Plugins -->
	<script src="~/lib/jquery/jquery.min.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/slick-carousel/slick.min.js"></script>
	<script src="~/lib/nouislider/nouislider.min.js"></script>
	<script src="~/lib/jquery-zoom/jquery.zoom.min.js"></script>
	<script src="~/js/main.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

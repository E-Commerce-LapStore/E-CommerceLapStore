@model LapStore.Web.ViewModels.CategoryVM
@{
    ViewData["Title"] = @Model.Name + " Details";
}


<div>
    <h1>@Model.Name Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 100px; height: 100px;" />
            }
        </dd>

        <dt class="col-sm-2">Parent Category Id</dt>
        <dd class="col-sm-10">@Model.ParentCategoryId</dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

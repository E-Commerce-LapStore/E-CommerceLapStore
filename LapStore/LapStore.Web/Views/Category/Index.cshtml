@model IEnumerable<LapStore.Web.ViewModels.CategoryVM>

@{
    ViewData["Title"] = "Categories Page";
}

<h2>Categories</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Parent Category</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(category.ImageUrl))
                    {
                        <img src="@category.ImageUrl" alt="@category.Name" style="width: 50px; height: 50px;" />
                    }
                </td>
                <td>@category.ParentCategoryId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Add" class="btn btn-success">Add New Category</a>
</div>

@model CategoryVM

@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ParentCategoryId" class="control-label"></label>
                <input asp-for="ParentCategoryId" class="form-control" />
                <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Current Image</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 100px; height: 100px;" class="img-thumbnail" />
                    </div>
                }
                else
                {
                    <p>No image available</p>
                }
            </div>

            <div class="form-group mb-3">
                <label asp-for="File" class="control-label">New Image</label>
                <input type="file" asp-for="File" class="form-control" accept="image/*" />
                <span asp-validation-for="File" class="text-danger"></span>
                <small class="text-muted">Leave empty to keep the current image</small>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@model UserEditVM
@{
    ViewData["Title"] = "Edit Profile";
}

<link rel="stylesheet" href="~/css/account.css" />

<div class="account-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="account-card">
                    <div class="card-header">
                        <h3 class="text-center">Edit Profile</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="EditProfile" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <h4 class="section-title">Personal Information</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="FirstName">First Name</label>
                                        <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="LastName">Last Name</label>
                                        <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="BirthDate">Birth Date</label>
                                        <input asp-for="BirthDate" class="form-control" type="date" />
                                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="Gender">Gender</label>
                                        <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<LapStore.DAL.Data.Entities.UserGender>()">
                                            <option value="">Select Gender</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <h4 class="section-title">Account Information</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="UserName">Username</label>
                                        <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="Email">Email</label>
                                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="PhoneNumber">Phone Number</label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <h4 class="section-title">Address Information</h4>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group mb-4">
                                        <label asp-for="Address.Street">Street Address</label>
                                        <input asp-for="Address.Street" class="form-control" placeholder="Enter your street address" />
                                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="Address.City">City</label>
                                        <input asp-for="Address.City" class="form-control" placeholder="Enter your city" />
                                        <span asp-validation-for="Address.City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="Address.Governorate">State/Province</label>
                                        <input asp-for="Address.Governorate" class="form-control" placeholder="Enter your state/province" />
                                        <span asp-validation-for="Address.Governorate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="Address.ZipCode">Postal Code</label>
                                        <input asp-for="Address.ZipCode" class="form-control" placeholder="Enter your postal code" />
                                        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="Address.Country">Country</label>
                                        <input asp-for="Address.Country" class="form-control" placeholder="Enter your country" />
                                        <span asp-validation-for="Address.Country" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a asp-action="Profile" class="btn btn-secondary">Back to Profile</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
@model UserVM
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">User Profile</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Username:</dt>
                                <dd class="col-sm-8">@Model.UserName</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                                <dt class="col-sm-4">Gender:</dt>
                                <dd class="col-sm-8">@Model.Gender</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Birth Date:</dt>
                                <dd class="col-sm-8">@Model.BirthDate.ToShortDateString()</dd>

                                <dt class="col-sm-4">Age:</dt>
                                <dd class="col-sm-8">@Model.Age</dd>

                                <dt class="col-sm-4">Role:</dt>
                                <dd class="col-sm-8">@Model.Role</dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not provided")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.Address != null)
                    {
                        <div class="mt-4">
                            <h4>Address</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Street:</dt>
                                <dd class="col-sm-8">@Model.Address.Street</dd>

                                <dt class="col-sm-4">City:</dt>
                                <dd class="col-sm-8">@Model.Address.City</dd>

                                <dt class="col-sm-4">State:</dt>
                                <dd class="col-sm-8">@Model.Address.Governorate</dd>

                                <dt class="col-sm-4">Postal Code:</dt>
                                <dd class="col-sm-8">@Model.Address.ZipCode</dd>

                                <dt class="col-sm-4">Country:</dt>
                                <dd class="col-sm-8">@Model.Address.Country</dd>
                            </dl>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
                        <a asp-action="ChangePassword" class="btn btn-secondary">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
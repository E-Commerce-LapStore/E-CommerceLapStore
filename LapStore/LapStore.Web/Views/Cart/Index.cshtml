@model CartVM
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2>Your Shopping Cart</h2>
    
    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Product" asp-action="Index">Continue shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <partial name="_CartItem" model="item" />
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span id="cartSubtotal">$@Model.Subtotal.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>@(Model.ShippingCost > 0 ? $"${Model.ShippingCost:F2}" : "Free")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong id="cartTotal">$@Model.Total.ToString("F2")</strong>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary">Proceed to Checkout</a>
                            <button type="button" class="btn btn-outline-danger" onclick="clearCart(@Model.Id)">Clear Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQuantity(cartId, productId, quantity) {
            if (quantity < 1) {
                quantity = 1;
            }
            
            $.post('@Url.Action("UpdateQuantity", "Cart")', {
                cartId: cartId,
                productId: productId,
                quantity: quantity
            }, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert('Error updating quantity');
                }
            });
        }

        function removeItem(cartId, productId) {
            if (confirm('Are you sure you want to remove this item?')) {
                $.post('@Url.Action("RemoveItem", "Cart")', {
                    cartId: cartId,
                    productId: productId
                }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error removing item');
                    }
                });
            }
        }

        function clearCart(cartId) {
            if (confirm('Are you sure you want to clear your cart?')) {
                $.post('@Url.Action("Clear", "Cart")', {
                    cartId: cartId
                }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error clearing cart');
                    }
                });
            }
        }
    </script>
} 
@model CartItemVM

<tr id="cart-item-@Model.ProductId">
    <td>
        <div class="d-flex align-items-center">
            @if (!string.IsNullOrEmpty(Model.MainImageUrl))
            {
                <img src="@Model.MainImageUrl" 
                     alt="@Model.ProductName" 
                     class="img-thumbnail me-3" 
                     style="width: 80px; height: 80px; object-fit: cover;">
            }
            <div>
                <h6 class="mb-0">@Model.ProductName</h6>
                <small class="text-muted">@Model.ProductCategory</small>
            </div>
        </div>
    </td>
    <td>$@Model.UnitPrice.ToString("F2")</td>
    <td style="width: 150px;">
        <div class="input-group">
            <button type="button" class="btn btn-outline-secondary btn-sm" 
                    onclick="updateQuantity(@Model.CartId, @Model.ProductId, @(Model.Quantity - 1))">-</button>
            <input type="number" value="@Model.Quantity" 
                   class="form-control form-control-sm text-center" 
                   min="1" style="width: 60px;"
                   onchange="updateQuantity(@Model.CartId, @Model.ProductId, this.value)">
            <button type="button" class="btn btn-outline-secondary btn-sm" 
                    onclick="updateQuantity(@Model.CartId, @Model.ProductId, @(Model.Quantity + 1))">+</button>
        </div>
    </td>
    <td>$@Model.TotalPrice.ToString("F2")</td>
    <td>
        <button type="button" class="btn btn-danger btn-sm" 
                onclick="removeItem(@Model.CartId, @Model.ProductId)">
            <i class="fas fa-trash"></i>
        </button>
    </td>
</tr> 